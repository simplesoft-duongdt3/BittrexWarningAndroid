<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="duongmh3.bittrexmanager">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.BittrexCheckInfoIntentService"
            android:exported="false" />

        <receiver
            android:name=".service.SyncWakefulReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".service.WarningChatHeadService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".listcoin.ListCoinActivity"></activity>
    </application>

</manifest>